# Netlify Headers Configuration for Service 24 BDD
# These headers improve security, performance, and SEO

# Global headers for all pages
/*
  # Security Headers
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=(self), interest-cohort=()
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://formspree.io; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com; img-src 'self' data: https:; connect-src 'self' https://formspree.io; frame-ancestors 'self';
  
  # Cache Control for HTML (short cache, always revalidate)
  Cache-Control: public, max-age=0, must-revalidate

# Static assets - short cache (1 hour) for easy updates
/*.css
  Cache-Control: public, max-age=3600, must-revalidate

/*.js
  Cache-Control: public, max-age=3600, must-revalidate

# Images - medium cache (1 day)
/*.png
  Cache-Control: public, max-age=86400, must-revalidate

/*.jpg
  Cache-Control: public, max-age=86400, must-revalidate

/*.jpeg
  Cache-Control: public, max-age=86400, must-revalidate

/*.svg
  Cache-Control: public, max-age=86400, must-revalidate

/*.ico
  Cache-Control: public, max-age=86400, must-revalidate

/*.webp
  Cache-Control: public, max-age=86400, must-revalidate

# XML files (sitemap)
/sitemap.xml
  Cache-Control: public, max-age=3600
  Content-Type: application/xml

# Robots.txt
/robots.txt
  Cache-Control: public, max-age=3600
  Content-Type: text/plain

# Preload key resources
/index.html
  Link: </styles.css>; rel=preload; as=style
  Link: </script.js>; rel=preload; as=script
  Link: </logo.webp>; rel=preload; as=image
